[Unit]
Description=HomematicToInflux
After=syslog.target

[Service]
Type=simple
WorkingDirectory=/home/hmtoinflux/HomematicToInflux
ExecStart=/home/hmtoinflux/HomematicToInflux/main.py
Environment=PYTHONUNBUFFERED=1
Type=notify
User=hmtoinflux
Group=hmtoinflux

SyslogIdentifier=hmtoinflux
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target