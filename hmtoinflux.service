[Unit]
Description=HomematicToInflux
After=syslog.target

[Service]
Type=simple
WorkingDirectory=/home/hmtoinflux/HomematicToInflux
ExecStart=/usr/bin/python3 -m hmtoinflux
Environment=PYTHONUNBUFFERED=1
User=hmtoinflux
Group=hmtoinflux

SyslogIdentifier=hmtoinflux
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target